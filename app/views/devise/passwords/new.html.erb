<%= render "devise/shared/brand" %>

<div class="panel panel-default">
  <div class="panel-body">
    <h4><%= t('.did_you_forget') %></h4>
    <p class="text-muted text-smaller"><%= t('.dont_worry') %></p>

    <hr />

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, t('general.email'), :class => "form-label" %>
        <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => t('general.email_placeholder') %>
      </div>

      <div>
        <%= f.submit t('.reset'), :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
