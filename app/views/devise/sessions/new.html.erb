<div class="container fold">
  <div class="logo logo-default"></div>

    <h3><%= t('.welcome_back') %></h3>

    <%= render '/layouts/flash' %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form'}) do |f| %>

      <div class="form-group">
        <%= f.label :email, t('general.email'), class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, placeholder: t('general.email_placeholder'), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('general.password'), class: 'form-label' %>
        <%= f.password_field :password, placeholder: t('.password_placeholder'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me, checked: 'checked' %> <%= f.label :remember_me, t('.remember_me') %></div>
      <% end -%>

      <div class="form-actions">
        <%= f.submit t('devise.general.sign_in'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br/>
    <%= render 'devise/shared/links' %>
  </div>
</div>
