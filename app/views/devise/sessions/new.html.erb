<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Roboto+Slab:700' rel='stylesheet' type='text/css'>

<div class="container">
	<div class="account">
		<div class="logo"></div>
		<h3>Welcome Back!</h3>
		<p>
			Actually, I would like to <%= link_to('sign up', new_account_path)  %>.
		</p>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  
		  <div class="input-container"><%= f.label :email %>
		  <%= f.email_field :email, :autofocus => true, :placeholder => "you@domain.com" %></div>

		  <div class="input-container"><%= f.label :password %>
		  <%= f.password_field :password, :placeholder => "Your password" %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in", :class => "btn large" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>