<%= form_for [@account, @canned_response], html: { class: 'form' } do |f| %>

  <div class="form-group">
    <%= f.label :key, t('.key'), class: 'control-label' %>
    <%= f.text_field :key, autofocus: true, placeholder: t('.key_placeholder'), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :message, t('.message'), class: 'control-label' %>
    <div class="editable form-control medium-editor" data-placeholder="<%= t('.message_placeholder') %>" contenteditable="true" id="canned-div">
      <%= @canned_response.message && @canned_response.message.html_safe %>
    </div>
    <%= f.hidden_field :message, id: 'canned-field' %>
  </div>

  <div class="form-actions">
    <%= f.submit @canned_response.persisted? ? t('.update') : t('.create'), class: 'btn btn-primary', id: 'submit-can-response' %>
  </div>

<% end %>
